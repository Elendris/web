---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<header id="home">
  <div class="container header__container">
    <div class="header__content">
      <h1>{t('header.title')}</h1>
      <span>{t('header.title')}</span>
      <div>
        <small>{t('header.desc')}</small>
      </div>
      <div class="d-flex ai-c gap-l">
        <button class="btn" data-reservation>{t('header.button.reservation')}</button>
        <a class="btn btn--secondary" href="#rooms" title={t('about.button.chooseRoom')}>{t('header.button.moreInfo')}</a>
      </div>
    </div>
    <div class="anim">
      <div class="anim__pic anim__pic--large" data-scroll-anim="false"></div>
      <div class="anim__pic anim__pic--small" data-scroll-anim="false"></div>
    </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const animPics = document.querySelectorAll(".anim__pic");

    if (animPics) {
      setTimeout(() => {
        animPics.forEach((picture) => {
          picture.setAttribute("data-scroll-anim", "true");
        });
      }, 2000);
    }
  });
</script>
